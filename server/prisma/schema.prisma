generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SuperHero {
  id                 String   @id @default(uuid())
  nickname           String
  real_name          String
  origin_description String
  superpowers        String // in pdf provided superpowers look like plain text so no additional table needed 
  catch_phrase       String
  images             Image[]
  createdAt          DateTime @default(now())
}

model Image {
  id           String    @id @default(uuid())
  imageOwnerId String
  imageOwner   SuperHero @relation(fields: [imageOwnerId], references: [id])
  url          String
  createdAt    DateTime  @default(now())
}
